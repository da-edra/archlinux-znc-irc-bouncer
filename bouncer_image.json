{
  "description": "Builds a CentOS 7 AMI with ZNC IRC Bouncer and Proxychains for Tor",
  "variables": {
    "aws_profile": "personal",
    "aws_region": "us-east-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "ZNC IRC Bouncer",
      "ssh_username": "centos",
      "instance_type": "t3.micro",
      "region": "{{user `aws_region`}}",
      "profile": "{{user `aws_profile`}}",
      "ami_name": "irc-bouncer-ami",
      "ami_description": "CentOS 7 AMI with ZNC IRC Bouncer and Proxychains for Tor",
      "force_deregister": true,
      "force_delete_snapshot": true,
      "encrypt_boot": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "CentOS Linux 7 x86_64 HVM EBS *b7ee8a69-ee97-4a49-9e68-afaee216db2e*",
          "root-device-type": "ebs"
        },
        "owners": [
          "679593333241"
        ],
        "most_recent": true
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum install python -y",
        "curl -O https://bootstrap.pypa.io/get-pip.py",
        "sudo python get-pip.py",
        "sudo pip install ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/user.yml",
      "playbook_dir": "ansible"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/packages.yml",
      "playbook_dir": "ansible"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/znc.yml",
      "playbook_dir": "ansible"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/hardening.yml",
      "playbook_dir": "ansible"
    },
    {
      "type": "shell",
      "inline": [
        "systemctl status sshd",
        "systemctl status firewalld",
        "systemctl status znc",
        "rm .ssh/authorized_keys ; sudo rm /root/.ssh/authorized_keys"
      ]
    }
  ]
}
